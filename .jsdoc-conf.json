{
    "opts" : {
        "package": "package.json",
        "readme": "README.md",
        "tutorials": "./examples/"
    },
    "tags": {
        "allowUnknownTags": false
    },
    "source": {
        "exclude": [ "test", "examples", "node_modules" ]
    },
    "plugins": [
        "plugins/markdown"
    ],
    "templates": {
        "cleverLinks": true,
        "default": {
            "includeDate": false
        }
    },
    "markdown": {
        "idInHeadings": true
    }
}
